	--read the type; this determines the label we give it.
	print("Address of the current Stat entry: 0x" .. string.format('%x', address))
	local statMemoryAddress = readPointer(address)
	print("Stat instance address: 0x" .. string.format('%x', statMemoryAddress))
	local relativeAddress = string.format('%x', statMemoryAddress).. "+0x" .. string.format('%x', KingdomStat["Type"].Offset)
	local statType = readInteger(relativeAddress)
	print("read stat type value: " .. statType)
	local statParent = AddChildToParentAddressView(parentNode, false, false, valueMappingTable[statType], "0x" .. string.format('%x', statMemoryAddress), vtQword)
	
	return address + 8
end


--function to add all of the child fields of `Kingmaker.Kingdom.KingdomState.Stats` to an added instance address node
